<!-- PassageHeader -->
<!-- 这里nobr不管用的 -->
<PassageHeader>

    /* 首先检测健康是不是低于0，是的话会死掉 */\
    <<if $arnold.health <= 0>>
        <<goto "BE-Death">>
    /* 最后检测健康是不是过低，过低的话有概率昏倒 */\
    <<elseif $arnold.health <= 30>>
        <<if random(1, 100) <= 10>>
            <<goto "Faint">>
        /* 没昏倒的话，会昏昏沉沉并加疲劳，加压力 */\
        <<else>>
            <<set $arnold.fatigue += 50>>
            <<set $arnold.stress += 50>>
        <</if>>
    <</if>>\

    /* 然后检测疲劳和压力有没有满，满了就昏倒 */\
    <<if $arnold.fatigue >= 1000 or $arnold.stress >= 1000>>
        <<goto "Faint">>
    <</if>>\

</PassageHeader>

