        <<set $arnold.fatigue to 0>>
    <</if>>
    <<if $arnold.stress < 0>>
        <<set $arnold.stress to 0>>
    <</if>>
    <<if $arnold.control > 1000>>
        <<set $arnold.control to 1000>>
    <</if>>
    <<if $arnold.health > 100>>
        <<set $arnold.health to 100>>
    <</if>>
